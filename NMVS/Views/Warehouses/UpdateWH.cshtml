@model NMVS.Models.DbModels.Warehouse

@{
    ViewData["Title"] = "Update Warehouse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <!-- Card header -->
            <div class="card-header">
                <h3 class="mb-0">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="UpdateWH">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="WhCode" />
                            <div class="form-group">
                                <label asp-for="WhDesc" class="control-label"></label>
                                <input asp-for="WhDesc" class="form-control" />
                                <span asp-validation-for="WhDesc" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="WhStatus" /> @Html.DisplayNameFor(model => model.WhStatus)
                                </label>
                            </div>
                            <div class="form-group">
                                <label asp-for="WhCmmt" class="control-label"></label>
                                <input asp-for="WhCmmt" class="form-control" />
                                <span asp-validation-for="WhCmmt" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SiCode" class="control-label"></label>
                                @Html.DropDownList("SiCode", new SelectList(ViewBag.SiteList, "SiCode", "SiDesc", Model.SiCode), new { @class = "form-control" })
                                <span asp-validation-for="SiCode" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Type" class="control-label"></label>
                                @Html.DropDownList("Type", new SelectList(ViewBag.WhTypes, "Code", "Desc", Model.Type), new { @class = "form-control" })
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />

                                <a asp-action="Browse" class="btn btn-secondary">Back to List</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.nav-wh').addClass('active');
    });
</script>