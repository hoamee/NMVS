@model NMVS.Models.ViewModels.UploadReportVm

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var i = 0;
}

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <!-- Card header -->
            <div class="card-header">
                <h3 class="mb-0">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UploadReport.UploadTime)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UploadReport.UploadTime)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UploadReport.UploadBy)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UploadReport.UploadBy)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UploadReport.FileName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UploadReport.FileName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UploadReport.UploadFunction)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UploadReport.UploadFunction)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UploadReport.TotalRecord)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UploadReport.TotalRecord)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UploadReport.Inserted)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UploadReport.Inserted)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UploadReport.Updated)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UploadReport.Updated)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UploadReport.Errors)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UploadReport.Errors)
                    </dd>
                </dl>
                <div>
                    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                    <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@Model.UploadReport.UploadId">Delete</a>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <!-- Card header -->
            <div class="card-header">
                <h3 class="mb-0">Errors</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-flush table-bordered" id="datatable-search">
                        <thead>
                            <tr>
                                <th>
                                    No.
                                </th>
                                <th>
                                    Description
                                </th>
                            </tr>
                           
                        </thead>
                        <tbody>
                            @foreach (var item in Model.UploadErrors)
                            {
                                i++;
                            <tr>
                                <td>
                                    @i
                                </td>
                                <td>
                                    @item.Error
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            
        </div>
    </div>
</div>