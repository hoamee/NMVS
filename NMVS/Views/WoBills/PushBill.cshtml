@model NMVS.Models.DbModels.WoBill

@{
    ViewData["Title"] = "Push bill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <!-- Card header -->
            <div class="card-header">
                <h3 class="mb-0">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="PushBill">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="WoNbr" class="control-label"></label>
                                <input asp-for="WoNbr" value="@ViewBag.WoNbr" readonly="readonly" class="form-control" />
                                <span asp-validation-for="WoNbr" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OrdQty" class="control-label"></label>
                                <input asp-for="OrdQty" class="form-control" />
                                <span asp-validation-for="OrdQty" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Assignee" class="control-label"></label>
                                @Html.DropDownList("Assignee", new SelectList(ViewBag.Assignee, "UserName", "FullName"), new { @class = "form-control" })
                                <span asp-validation-for="Assignee" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DueDate" class="control-label"></label>
                                <input asp-for="DueDate" class="form-control" />
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-outline-primary" />

                                <a href="/WorkOrders/WoDetails/@ViewBag.WoNbr" class="btn btn-secondary">Back to List</a>
                            </div>
                        </form>
                        

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />
<script>
    $(document).ready(function () {
        
    });
</script>