@model NMVS.Models.DbModels.WoBill

@{
    ViewData["Title"] = "Update bills";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.WoBillNbr)
        @Html.HiddenFor(model => model.Assignee)

        <div class="form-group">
            @Html.LabelFor(model => model.WoNbr, "Work Order", htmlAttributes: new { @class = "control-label" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.WoNbr, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.WoNbr, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OrdQty, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.OrdQty, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.OrdQty, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ComQty, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.ComQty, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ComQty, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OrdDate, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.OrdDate, new { htmlAttributes = new { @class = "form-control", @type = "text", @readonly = true } })
                @Html.ValidationMessageFor(model => model.OrdDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DueDate, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.DueDate, new { htmlAttributes = new { @class = "form-control", @type = "text", @readonly = true } })
                @Html.ValidationMessageFor(model => model.DueDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" value="Submit" class="btn btn-success" />
                @Html.ActionLink("Back to List", "Bills")
            </div>
        </div>
    </div>
}
