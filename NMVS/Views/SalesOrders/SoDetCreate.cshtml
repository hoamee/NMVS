@model NMVS.Models.DbModels.SoDetail

@{
    ViewData["Title"] = "Sales order lines";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <!-- Card header -->
            <div class="card-header">
                <h3 class="mb-0">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="SoDetCreate">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <table class="col-12">
                                <thead>
                                    <tr>
                                        <th>

                                            SO No.
                                        </th>
                                        <th class="col-2">
                                            Item No.
                                        </th>
                                        <th>
                                            Quantity
                                        </th>
                                        <th>
                                            Require Date
                                        </th>
                                        <th>
                                            Discount
                                        </th>
                                        <th>
                                            Net Price
                                        </th>
                                        <th>
                                            Tax
                                        </th>

                                    </tr>
                                </thead>
                                <tr>
                                    <td>
                                        <input asp-for="SoNbr" class="form-control" readonly value="@ViewBag.SoNbr" />
                                        <span asp-validation-for="SoNbr" class="text-danger"></span>
                                    </td>
                                    <td>
                                        <input asp-for="ItemNo" class="form-control" readonly />
                                        <span asp-validation-for="ItemNo" class="text-danger"></span>
                                    </td>
                                    <td>
                                        <input asp-for="Quantity" class="form-control" />
                                        <span asp-validation-for="Quantity" class="text-danger"></span>
                                    </td>
                                    <td>
                                        <input asp-for="RequiredDate" class="form-control" />
                                        <span asp-validation-for="RequiredDate" class="text-danger"></span>
                                    </td>
                                    <td>
                                        <input asp-for="Discount" class="form-control" value="0" />
                                        <span asp-validation-for="Discount" class="text-danger"></span>
                                    </td>
                                    <td>
                                        <input asp-for="NetPrice" class="form-control" value="0"  />
                                        <span asp-validation-for="NetPrice" class="text-danger"></span>
                                    </td>
                                    <td>
                                        <input asp-for="Tax" class="form-control" value="0"  />
                                        <span asp-validation-for="Tax" class="text-danger"></span>
                                    </td>
                                </tr>
                            </table>

                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script src="~/assets/js/bootbox/bootbox.min.js"></script>
<partial name="ItemModal" />
<script src="~/assets/datatable/datatables.min.js"></script>
<partial name="_ValidationScriptsPartial" />
<script>


    function setItemNo(sup) {
        $('#ItemNo').val(sup);
        $('#item-modal').modal('toggle');
    };

    function setDate(dt) {
        $('#SpecDate').val(dt);
        $('#spec-modal').modal('toggle');
    };


    $(document).ready(function () {
        $('.nav-request').addClass('active');
        $('.nav-rq-his').addClass('active');
        $('#navRequest').addClass('show');
        $('#new-list').click(function () {
            $('#file-modal').modal('toggle');
        });
        

        $('#ItemNo').click(function () {
            $('#item-modal').modal('toggle');
        });

        
    });
</script>